<a
	href="/<%- title.type == 'movie' ? 'movie' : 'serie' %>/<%= title.id %>"
	class="group relative flex-none w-40 h-60 rounded-lg overflow-hidden transform transition duration-300 hover:scale-105 origin-center cursor-pointer"
>
	<!-- Poster -->
	<img
		src="<%= title.image %>"
		alt="<%= title.title %>"
		class="w-full h-full object-cover"
	/>

	<!-- Hover overlay -->
	<div
		class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 flex flex-col justify-end p-2 transition-opacity duration-300"
	>
		<p class="text-sm font-semibold truncate text-blue-300">
			<%= title.title %>
		</p>
		<button
			class="mt-1 px-2 py-1 bg-blue-600 rounded text-sm hover:bg-blue-700"
		>
			Play
		</button>
	</div>
</a>
